{
  "compilerOptions": {
    "target": "es2016", // 컴파일된 코드의 버전
    /* Modules */
    "module": "commonjs", // 모듈 시스템
    "esModuleInterop": true, // es6 모듈을 commonjs 모듈로 변환
    "forceConsistentCasingInFileNames": true, // 파일명 대소문자 구분
    "strict": true, // 엄격한 타입 체크
    "experimentalDecorators": true, // 데코레이터 활성화
    "emitDecoratorMetadata": true, // 데코레이터 메타데이터 생성    
    "skipLibCheck": true, // 라이브러리 체크 생략
    // 에러 활성화
    "noEmitOnError": false, // 오류 발생 시 파일 출력
    "noImplicitAny": true // 암시적 any 타입 금지
  }
}